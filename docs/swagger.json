{
    "swagger": "2.0",
    "info": {
        "description": "Ferramenta simplificada para registro de crises de Lara",
        "title": "MonitoLara - Diário de Crise",
        "contact": {}
    },
    "host": "localhost:8080",
    "basePath": "/diario",
    "paths": {
        "/registro": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "summary": "Adiciona um novo registro no diário",
                "parameters": [
                    {
                        "type": "boolean",
                        "description": "Evento ocorrido agora?",
                        "name": "ocorrido_agora",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Horário do evento",
                        "name": "horario_evento",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Quem está registrando?",
                        "name": "reporter",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Descrição do evento",
                        "name": "descricao",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ok",
                        "schema": {
                            "$ref": "#/definitions/models.Record"
                        }
                    },
                    "400": {
                        "description": "insira dados faltantes",
                        "schema": {
                            "$ref": "#/definitions/web.APIError"
                        }
                    },
                    "500": {
                        "description": "falha na inserção de dados",
                        "schema": {
                            "$ref": "#/definitions/web.APIError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Record": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "event_time": {
                    "type": "string"
                },
                "id": {
                    "type": "integer"
                },
                "regtime": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                }
            }
        },
        "web.APIError": {
            "type": "object",
            "properties": {
                "errorCode": {
                    "type": "integer"
                },
                "errorMessage": {
                    "type": "string"
                }
            }
        }
    }
}